{
    "name": "tsp-toolkit",
    "publisher": "Tektronix",
    "displayName": "Keithley TSP Toolkit",
    "description": "VSCode extension for Keithley Instruments' Test Script Protocol",
    "version": "0.13.0",
    "icon": "./resources/TSP_Toolkit_128x128.png",
    "galleryBanner": {
        "color": "#EEEEEE",
        "theme": "light"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/TEK-Engineering/tsp-toolkit.git"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "pricing": "Free",
    "bugs": {"url": "https://github.com/tektronix/tsp-toolkit/issues"},
    "qna": "https://github.com/tektronix/tsp-toolkit/discussions",
    "contributors": [
        "esarver"
    ],
    "maintainers": [
        "esarver"
    ],
    "license": "Apache-2.0",
    "main": "./out/extension.js",
    "contributes": {
        "breakpoints": [
            {
                "language": "lua"
            }
        ],
        "commands": [
            {
                "command": "tsp.openTerminal",
                "title": "Open Terminal",
                "category": "TSP"
            },
            {
                "command": "tsp.sendFile",
                "title": "Send Script to Terminal",
                "category": "TSP"
            },
            {
                "command": "tsp.sendFileToAllInstr",
                "title": "Send Script to All Terminals",
                "enablement": "isKicTerminalActive",
                "category": "TSP"
            },
            {
                "command": "tsp.openTerminalIP",
                "title": "Open Terminal",
                "category": "TSP"
            },
            {
                "command": "InstrumentsExplorer.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "InstrumentsExplorer.rename",
                "title": "Rename"
            },
            {
                "command": "InstrumentsExplorer.upgradeSlot1",
                "title": "Upgrade Slot 1",
                "category": "TSP"
            },
            {
                "command": "InstrumentsExplorer.upgradeSlot2",
                "title": "Upgrade Slot 2",
                "category": "TSP"
            },
            {
                "command": "InstrumentsExplorer.upgradeSlot3",
                "title": "Upgrade Slot 3",
                "category": "TSP"
            },
            {
                "command": "InstrumentsExplorer.upgradeFirmware",
                "title": "Upgrade Firmware",
                "category": "TSP"
            },
            {
                "command": "InstrumentsExplorer.upgradeMainframe",
                "title": "Upgrade Mainframe",
                "category": "TSP"
            },
            {
                "command": "tsp.configureTspLanguage",
                "title": "Fetch TSP-Link Nodes for Connected Instrument",
                "category": "TSP"
            },
            {
                "command": "InstrumentsExplorer.save",
                "title": "Save",
                "category": "TSP"
            },
            {
                "command": "InstrumentsExplorer.remove",
                "title": "Remove",
                "category": "TSP"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "TSP Configuration",
            "properties": {
                "tsp.connectionList": {
                    "type": "array",
                    "default": [],
                    "description": "A list of previous instrument connections"
                },
                "tsp.errorLimit": {
                    "type": "number",
                    "default": 3,
                    "description": "Maximum number of consecutive errors to print in the terminal"
                },
                "tsp.savedInstrumentList": {
                    "type": "array",
                    "default": [],
                    "description": "A list of saved instrument serial numbers"
                }
            }
        },
        "menus": {
            "editor/context": [
                {
                    "when": "activeEditor && resourceExtname == .tsp",
                    "command": "tsp.sendFile",
                    "group": "navigation"
                },
                {
                    "when": "activeEditor && resourceExtname == .tsp",
                    "command": "tsp.sendFileToAllInstr",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "tsp.configureTspLanguage",
                    "when": "explorerResourceIsFolder && resourceFilename == '.tspConfig'",
                    "group": "navigation"
                },
                {
                    "when": "activeEditor && resourceExtname == .tsp",
                    "command": "tsp.sendFile",
                    "group": "navigation"
                },
                {
                    "when": "activeEditor && resourceExtname == .tsp",
                    "command": "tsp.sendFileToAllInstr",
                    "group": "navigation"
                }
            ],
            "editor/title/context": [
                {
                    "when": "activeEditor && resourceExtname == .tsp",
                    "command": "tsp.sendFile",
                    "group": "navigation"
                },
                {
                    "when": "activeEditor && resourceExtname == .tsp",
                    "command": "tsp.sendFileToAllInstr",
                    "group": "navigation"
                }
            ],
            "view/title": [
                {
                    "command": "InstrumentsExplorer.refresh",
                    "when": "view == InstrumentsExplorer",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "tsp.openTerminalIP",
                    "when": "false"
                },
                {
                    "command": "InstrumentsExplorer.upgradeFirmware",
                    "when": "false"
                },
                {
                    "command": "InstrumentsExplorer.upgradeMainframe",
                    "when": "false"
                },
                {
                    "command": "InstrumentsExplorer.upgradeSlot1",
                    "when": "false"
                },
                {
                    "command": "InstrumentsExplorer.upgradeSlot2",
                    "when": "false"
                },
                {
                    "command": "InstrumentsExplorer.upgradeSlot3",
                    "when": "false"
                },
                {
                    "command": "tsp.configureTspLanguage",
                    "when": "false"
                },
                {
                    "command": "InstrumentsExplorer.save",
                    "when": "false"
                },
                {
                    "command": "InstrumentsExplorer.remove",
                    "when": "false"
                }
            ],
            "view/item/context": [
                {
                    "command": "InstrumentsExplorer.rename",
                    "when": "view == InstrumentsExplorer && viewItem =~ /.*Instr/"
                },
                {
                    "command": "tsp.openTerminalIP",
                    "when": "view == InstrumentsExplorer && viewItem =~ /.*Instr/"
                },
                {
                    "command": "InstrumentsExplorer.upgradeFirmware",
                    "when": "view == InstrumentsExplorer && viewItem =~ /.*RegInstr/",
                    "group": "upgrade"
                },
                {
                    "command": "InstrumentsExplorer.upgradeMainframe",
                    "when": "view == InstrumentsExplorer && viewItem =~ /.*VersatestInstr/",
                    "group": "upgrade"
                },
                {
                    "submenu": "modulesubmenu",
                    "when": "view == InstrumentsExplorer && viewItem =~ /.*VersatestInstr/",
                    "group": "upgrade"
                },
                {
                    "command": "InstrumentsExplorer.save",
                    "when": "view == InstrumentsExplorer && viewItem =~ /NotSaved.*/"
                },
                {
                    "command": "InstrumentsExplorer.remove",
                    "when": "view == InstrumentsExplorer && viewItem =~ /ToRemove.*/"
                }
            ],
            "modulesubmenu": [
                {
                    "command": "InstrumentsExplorer.upgradeSlot1",
                    "group": "upgrade.Slot"
                },
                {
                    "command": "InstrumentsExplorer.upgradeSlot2",
                    "group": "upgrade.Slot"
                },
                {
                    "command": "InstrumentsExplorer.upgradeSlot3",
                    "group": "upgrade.Slot"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "tsp-toolkit-container",
                    "icon": "resources/tsp-toolkit-view-container-icon.svg",
                    "title": "TSP Toolkit"
                }
            ]
        },
        "views": {
            "tsp-toolkit-container": [
                {
                    "id": "InstrumentsExplorer",
                    "name": "Instruments"
                }
            ]
        },
        "debuggers": [
            {
                "type": "tspdebug",
                "languages": [
                    "tsp"
                ],
                "label": "Tsp Debug",
                "program": "./out/extension.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Absolute path to a text file.",
                                "default": "${workspaceFolder}/tspScript.tsp"
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop after launch.",
                                "default": false
                            },
                            "trace": {
                                "type": "boolean",
                                "description": "Enable logging the Debug Adapter Protocol"
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "tspdebug",
                        "request": "launch",
                        "name": "Debug TSP File",
                        "program": "${workspaceFolder}/tspScript.tsp",
                        "stopOnEntry": false
                    }
                ]
            }
        ],
        "submenus": [
            {
                "label": "Module",
                "id": "modulesubmenu"
            }
        ]
    },
    "scripts": {
        "preinstall": "node scripts/link-dev-ki-comms.js",
        "pretest": "npm run compile && npm run lint",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts",
        "test": "mocha --config .mocharc.yml",
        "test-ci": "mocha --config .mocharc.yml --reporter xunit --reporter-option output=junit.xml",
        "coverage": "nyc --nycrc-path='.nycrc.json' npm run test"
    },
    "devDependencies": {
        "@cyclonedx/cyclonedx-npm": "^1.16.1",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/chai": "^4.3.1",
        "@types/mocha": "^9.1.1",
        "@types/node": "14.x",
        "@types/node-fetch": "^2.6.2",
        "@types/vscode": "^1.66.0",
        "@typescript-eslint/eslint-plugin": "^5.22.0",
        "@typescript-eslint/parser": "^5.22.0",
        "@vscode/vsce": "^2.22.0",
        "chai": "^4.3.6",
        "eslint": "^8.14.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^2.7.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsdoc": "^39.2.9",
        "eslint-plugin-prettier": "^4.0.0",
        "mocha": "^9.2.2",
        "nyc": "^15.1.0",
        "prettier": "^2.6.2",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.4"
    },
    "dependencies": {
        "@tek-engineering/keithley_instrument_libraries": "0.11.2",
        "@tek-engineering/kic-cli": "0.13.0-0",
        "@tek-engineering/web-help-documents": "0.10.1",
        "@types/cheerio": "^0.22.31",
        "cheerio": "^1.0.0-rc.12",
        "class-transformer": "^0.5.1",
        "json-rpc-2.0": "^1.6.0",
        "node-fetch": "^2.6.2",
        "path-browserify": "^1.0.1",
        "portfinder": "^1.0.32",
        "sax-ts": "^1.2.12",
        "xml-js": "^1.6.11"
    },
    "extensionDependencies": [
        "sumneko.lua"
    ]
}
